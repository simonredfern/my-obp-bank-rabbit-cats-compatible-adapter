<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application loggers -->
    <logger name="com.mybank" level="DEBUG"/>
    <logger name="com.tesobe.obp.adapter" level="INFO"/>

    <!-- Third-party loggers -->
    <logger name="org.http4s" level="WARN"/>
    <logger name="org.http4s.ember.server" level="INFO"/>
    <logger name="org.http4s.ember.client" level="INFO"/>
    <logger name="dev.profunktor" level="INFO"/>
    <logger name="io.lettuce" level="WARN"/>
    <logger name="io.netty" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
